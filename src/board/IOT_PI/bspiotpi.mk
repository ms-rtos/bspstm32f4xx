# Clear setting
#*********************************************************************************************************
include $(CLEAR_VARS_MK)

#*********************************************************************************************************
# Target
#*********************************************************************************************************
LOCAL_TARGET_NAME := bspiotpi.elf

#*********************************************************************************************************
# Source list
#*********************************************************************************************************
LOCAL_SRCS := \
$(STM32F4HAL_SRCS) \
src/common/bsp_lib.c \
src/driver/stm32_drv_fb.c \
src/driver/stm32_drv_flash.c \
src/driver/stm32_drv_gpio.c \
src/driver/stm32_drv_i2c.c \
src/driver/stm32_drv_sd.c \
src/driver/stm32_drv_spi_nor.c \
src/driver/stm32_drv_touch.c \
src/driver/stm32_drv_wdg.c \
src/driver/stm32_drv_uart.c \
src/driver/stm32_drv_rtc.c \
src/board/IOT_PI/iot_pi_init.c \
src/board/IOT_PI/iot_pi_irq.c \
src/board/IOT_PI/iot_pi_sd.c \
src/board/IOT_PI/iot_pi_esp8266.c \
src/board/IOT_PI/iot_pi_flash.c \
src/board/IOT_PI/iot_pi_usart.c \
src/Drivers/CMSIS/Device/ST/STM32F4xx/Source/Templates/system_stm32f4xx.c \
src/startup/startup_stm32f412xx.S

#*********************************************************************************************************
# Header file search path (eg. LOCAL_INC_PATH := -I"Your header files search path")
#*********************************************************************************************************
LOCAL_INC_PATH := \
$(STM32F4HAL_INC_PATH) \
-I"./src/board/IOT_PI" \
-I"$(MSRTOS_BASE_PATH)/libmsdriver/src"

#*********************************************************************************************************
# Pre-defined macro (eg. -DYOUR_MARCO=1)
#*********************************************************************************************************
LOCAL_DSYMBOL := \
$(STM32F4HAL_DSYMBOL) \
-D__MS_KERNEL_SPACE \
-DSTM32F412Rx \
-DHSE_VALUE=8000000 \
-DIOT_PI

#*********************************************************************************************************
# Compiler flags
#*********************************************************************************************************
LOCAL_CFLAGS   := 
LOCAL_CXXFLAGS := 

#*********************************************************************************************************
# Depend library (eg. LOCAL_DEPEND_LIB := -la LOCAL_DEPEND_LIB_PATH := -L"Your library search path")
#*********************************************************************************************************
LOCAL_DEPEND_LIB      := -lfatfs -lnet_esp_at -lmsdriver
LOCAL_DEPEND_LIB_PATH := \
$(STM32F4HAL_DEPEND_LIB_PATH) \
-L"$(MSRTOS_BASE_PATH)/libmsdriver/$(OUTDIR)" \
-L"$(MSRTOS_BASE_PATH)/libmsmodule/$(OUTDIR)"

#*********************************************************************************************************
# Link script file
#*********************************************************************************************************
LOCAL_LD_SCRIPT := MS-RTOS.ld

#*********************************************************************************************************
# C++ config
#*********************************************************************************************************
LOCAL_USE_CXX        := no
LOCAL_USE_CXX_EXCEPT := no

#*********************************************************************************************************
# Code coverage config
#*********************************************************************************************************
LOCAL_USE_GCOV := no

#*********************************************************************************************************
# Use module loader library
#*********************************************************************************************************
LOCAL_USE_LOADER_LIB := no

#*********************************************************************************************************
# Use launcher library
#*********************************************************************************************************
LOCAL_USE_LAUNCHER_LIB := no

#*********************************************************************************************************
# Use patch library
#*********************************************************************************************************
LOCAL_USE_PATCH_LIB := no

#*********************************************************************************************************
# User link command
#*********************************************************************************************************
LOCAL_PRE_LINK_CMD   := 
LOCAL_POST_LINK_CMD  := 
LOCAL_PRE_STRIP_CMD  := 
LOCAL_POST_STRIP_CMD := 

